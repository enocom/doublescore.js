{
  "camelcase": true, // because it's javascript
  "eqeqeq": true, // triple equals FTW
  "globals": {
     // doublescore
    "__": true,

     // jasmine
    "describe": false,
    "expect": false,
    "spyOn": false,
    "it": false,
    "xit": false,

    // Gruntfile
    "module": false
  },
  "latedef": true, // prohibits use of variable before definition
  "newcap": true, // constructors are capitalized
  "quotmark": "double", // consistency is best
  "strict": false,
  "trailing": true, // trailing whitespace is bad
  "undef": true, // prohibits use of undeclared variables
  "unused": true // warning for defined yet unused variables
}
